<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_white"
    android:orientation="vertical"
    android:textColor="#437FB4">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="标题:"
            android:textColor="#437FB4"
            android:textSize="25dp" />

        <EditText
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_margin="10dp"
            android:background="@drawable/edit_bg"
            android:textColor="#437FB4" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="类别:"
            android:textColor="#437FB4"
            android:textSize="18dp" />

        <RadioGroup
            android:id="@+id/type_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/type_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物业类"
                android:textColor="#437FB4" />

            <RadioButton
                android:id="@+id/type_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="生活类"
                android:textColor="#437FB4" />

            <RadioButton
                android:id="@+id/type_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="后勤类"
                android:textColor="#437FB4" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="部门:"
            android:textColor="#437FB4"
            android:textSize="18dp" />

        <RadioGroup
            android:id="@+id/dept_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/dept_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="物业布"
                android:textColor="#437FB4" />

            <RadioButton
                android:id="@+id/dept_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="生活部"
                android:textColor="#437FB4" />

            <RadioButton
                android:id="@+id/dept_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="后勤部"
                android:textColor="#437FB4" />
        </RadioGroup>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:text="是否匿名:"
            android:textColor="#437FB4"
            android:textSize="18dp" />

        <RadioGroup
            android:id="@+id/is_anno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="horizontal">

            <RadioButton
                android:id="@+id/type_yes"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="是"
                android:textColor="#437FB4" />

            <RadioButton
                android:id="@+id/type_no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:text="否"
                android:textColor="#437FB4" />
        </RadioGroup>
    </LinearLayout>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:hint="我的建议……"
        android:textColorHint="#437FB4" />

    <Button
        android:id="@+id/btn_get_data"
        android:layout_margin="2dp"
        android:textSize="16sp"
        android:text="获取数据测试"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tv_data"
        android:padding="10dp"
        android:textSize="16sp"
        android:gravity="center"
        android:text="imxiaoqi"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>
